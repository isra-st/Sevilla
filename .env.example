# Idealista Sevilla Scraper config
# Copy to .env and set values

# Base URL for selling apartments in Sevilla
IDEALISTA_BASE_URL=https://www.idealista.com/venta-viviendas/sevilla-sevilla/

# Delay between requests (seconds) - human-like: 8-20
DELAY_MIN=8
DELAY_MAX=20

# Max search result pages to scrape (Idealista cap is 60)
MAX_PAGES=60

# Optional: residential proxy for Playwright (e.g. http://user:pass@host:port)
# PROXY_URL=

# Scraper approach: undetected | selenium | playwright | playwright_cdp
# Run: python -m idealista_scraper.cli --test-approaches to find one that works
# SCRAPER_APPROACH=undetected

# Use Selenium (same as SCRAPER_APPROACH=selenium)
# USE_SELENIUM=true

# Attach to your existing Chrome: close Chrome, start with
#   chrome.exe --remote-debugging-port=9222
# then set CHROME_CDP_URL=http://localhost:9222 (and optionally SCRAPER_APPROACH=playwright_cdp)
# CHROME_CDP_URL=http://localhost:9222

# Pause after first page load so you can solve DataDome captcha in the browser (recommended if you get blocked)
# PAUSE_FOR_CAPTCHA=true

# Run browser visible (false) to reduce headless detection if you get 403
# HEADLESS=false
